<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zsxyww.backend.mapper.KnowledgeArticleMapper">
  <!-- 查询所有知识文章 -->
  <select id="selectAll" resultType="com.zsxyww.backend.model.entity.KnowledgeArticle">
    SELECT * FROM knowledge_article
  </select>

  <!-- 根据ID查询知识文章 -->
  <select id="selectById" parameterType="int" resultType="com.zsxyww.backend.model.entity.KnowledgeArticle">
    SELECT * FROM knowledge_article WHERE id = #{id}
  </select>

  <!-- 插入知识文章 -->
  <insert id="insert" parameterType="com.zsxyww.backend.model.entity.KnowledgeArticle">
    INSERT INTO knowledge_article (title, content, category_id, author_id, created_at, updated_at)
    VALUES (#{title}, #{content}, #{categoryId}, #{authorId}, #{createdAt}, #{updatedAt})
  </insert>

  <!-- 更新知识文章 -->
  <update id="update" parameterType="com.zsxyww.backend.model.entity.KnowledgeArticle">
    UPDATE knowledge_article
    SET title = #{title}, content = #{content}, category_id = #{categoryId}, author_id = #{authorId}, updated_at = #{updatedAt}
    WHERE id = #{id}
  </update>

  <!-- 删除知识文章 -->
  <delete id="deleteById" parameterType="int">
    DELETE FROM knowledge_article WHERE id = #{id}
  </delete>
</mapper>